FROM ubuntu:22.04

RUN apt update && apt install -y \
    wget unzip gcc software-properties-common curl iperf3 vim

RUN wget 'https://packages.vectorized.io/nzc4ZYQK3WRGd9sy/redpanda/cfg/setup/bash.deb.sh'

RUN chmod +x bash.deb.sh

RUN ./bash.deb.sh

RUN apt install redpanda

COPY ./rpk /

COPY ./startredpanda.sh /
COPY ./rpksetup.sh /

RUN chmod +x ./startredpanda.sh
RUN chmod +x ./rpksetup.sh
