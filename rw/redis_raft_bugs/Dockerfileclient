# Use the official Ubuntu 20.04 image from Docker Hub
FROM ubuntu:20.04

# Update package lists and install Python 3 with pip
RUN apt-get update && \
    apt-get install -y python3-pip redis-server redis-tools && \
    apt-get clean

# Install the Redis Python client
#RUN pip3 install redis==3.5.3
RUN pip3 install redis-py-cluster


# Copy the workload.py file into the container
ADD workload.py .

# Set the working directory
WORKDIR /

# Command to run when the container starts
#CMD ["python3", "workload.py"]